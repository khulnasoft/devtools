{
  "name": "{{name}}",
  "description": "The {{moduleId}} backend module for the {{pluginId}} plugin.",
  "version": "{{packageVersion}}",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "license": "{{license}}",
{{#if privatePackage}}
  "private": {{privatePackage}},
{{/if}}
  "publishConfig": {
{{#if npmRegistry}}
    "registry": "{{npmRegistry}}",
{{/if}}
    "access": "public",
    "main": "dist/index.cjs.js",
    "types": "dist/index.d.ts"
  },
  "devtools": {
    "role": "backend-plugin-module"
  },
  "scripts": {
    "start": "devtools-cli package start",
    "build": "devtools-cli package build",
    "lint": "devtools-cli package lint",
    "test": "devtools-cli package test",
    "clean": "devtools-cli package clean",
    "prepack": "devtools-cli package prepack",
    "postpack": "devtools-cli package postpack"
  },
  "dependencies": {
    "@devtools/backend-plugin-api": "{{versionQuery '@devtools/backend-plugin-api'}}"
  },
  "devDependencies": {
    "@devtools/backend-test-utils": "{{versionQuery '@devtools/backend-test-utils'}}",
    "@devtools/cli": "{{versionQuery '@devtools/cli'}}"
  },
  "files": [
    "dist"
  ]
}
