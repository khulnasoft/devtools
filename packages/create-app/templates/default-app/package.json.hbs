{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "20 || 22"
  },
  "scripts": {
    "dev": "yarn workspaces foreach -A --include backend --include app --parallel -j 2 -v -i run start",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "build:backend": "yarn workspace backend build",
    "build:all": "devtools-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "devtools-cli repo clean",
    "test": "devtools-cli repo test",
    "test:all": "devtools-cli repo test --coverage",
    "test:e2e": "playwright test",
    "fix": "devtools-cli repo fix",
    "lint": "devtools-cli repo lint --since origin/{{defaultBranch}}",
    "lint:all": "devtools-cli repo lint",
    "prettier:check": "prettier --check .",
    "new": "devtools-cli new --scope internal"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@devtools/cli": "^{{version '@devtools/cli'}}",
    "@devtools/e2e-test-utils": "^{{version '@devtools/e2e-test-utils'}}",
    "@playwright/test": "^1.32.3",
    "node-gyp": "^10.0.0",
    "prettier": "^2.3.2",
    "typescript": "~5.4.0"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "prettier": "@devtools/cli/config/prettier",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.4.1"
}
